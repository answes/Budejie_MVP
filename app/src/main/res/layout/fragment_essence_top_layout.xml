<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/id_stickynavlayout_topview"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
             android:paddingBottom="@dimen/margin_left_6_dp"
              android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/id_banner"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:image_scale_type="fit_xy"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_l_8_dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_detection"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/fragment_essence_detection"
                android:id="@+id/imageView"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_left_6_dp"
                android:text="汽车检测"
                android:textColor="@color/tv_black_90"
               />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_insurance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/fragment_essence_insurance"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_left_6_dp"
                android:text="车险直销"
                android:textColor="@color/tv_black_90"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_illegal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/fragment_essence_illegal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_left_6_dp"
                android:text="违章查询"
                android:textColor="@color/tv_black_90"
               />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_service"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/fragment_essence_service"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_left_6_dp"
                android:text="维修检测"
                android:textColor="@color/tv_black_90"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_beauty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/fragment_essence_beauty"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_left_6_dp"
                android:text="汽车美容"
                android:textColor="@color/tv_black_90"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_convenience"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/fragment_essence_convenience"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_left_6_dp"
                android:text="便民充值"
                android:textColor="@color/tv_black_90"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>