<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.allen.supertextviewlibrary.SuperTextView
        android:id="@+id/stv_time"
        android:layout_width="match_parent"
        app:sLeftTextString="违章时间"
        app:sLeftTextColor="@color/check_bg"
        app:sRightTextString="2015-11-09-11:22:30"
        app:sRightTextColor="@color/tv_black_50"
        android:layout_height="40dp"
        />
    <com.allen.supertextviewlibrary.SuperTextView
        android:id="@+id/stv_reason"
        android:layout_width="match_parent"
        app:sLeftTopTextString="违章行为"
        app:sLeftTopTextSize="@dimen/text_size_16_sp"
        app:sLeftBottomTextString="12080 不按导向车道行驶"
        app:sLeftBottomTextColor="@color/tv_black_50"
        app:sLineShow="none"
        android:layout_height="60dp"/>
    <com.allen.supertextviewlibrary.SuperTextView
        android:id="@+id/stv_address"
        android:layout_width="match_parent"
        app:sLeftTopTextString="违章地点"
        app:sLeftTopTextSize="@dimen/text_size_16_sp"
        app:sLeftBottomTextString="秀海园红绿灯十字路口"
        app:sLeftBottomTextColor="@color/tv_black_50"
        app:sLineShow="none"
        android:layout_height="60dp"/>

    <com.allen.supertextviewlibrary.SuperTextView
        android:id="@+id/stv_moeny"
        android:layout_width="match_parent"
        app:sLeftTextString="罚款金额   100元"
        app:sLineShow="top"
        app:sRightTextString="扣分2分"
        app:sRightTextColor="@color/red"
        android:layout_height="40dp"/>

</LinearLayout>