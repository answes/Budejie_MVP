<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.bigshark.budejie_mvp.pro.custom_view.XCRoundRectImageView
        android:id="@+id/iv_header"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="@dimen/margin_left_12_dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="@dimen/margin_left_12_dp"
        android:scaleType="fitXY"
        app:shape_mode="round_rect"
        app:round_radius="4dp"
        android:src="@drawable/main_bottom_attention_normal" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_left_12_dp"
        android:layout_marginLeft="@dimen/margin_left_12_dp"
        android:layout_marginTop="@dimen/margin_left_12_dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/second_tv_size"
            android:textColor="@color/main_bottom_text_select"
            android:layout_marginTop="@dimen/margin_left_6_dp"
            android:singleLine="true"
            android:text="测试" />

        <TextView
            android:id="@+id/tv_secend_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:maxLines="2"
            android:layout_marginTop="@dimen/margin_left_6_dp"
            android:text="测试" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/lbs_icon"/>
        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="200km"/>

    </LinearLayout>

</LinearLayout>