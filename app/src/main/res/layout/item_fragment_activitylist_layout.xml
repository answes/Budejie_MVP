<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="200dp"
             android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_activity_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/tv_black_90"
                android:background="@drawable/activity_title_city_bg"
                android:padding="@dimen/margin_left_12_dp"
                android:text="这个是测试"/>

            <TextView
                android:id="@+id/tv_activity_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#55c2ccd0"
                android:padding="@dimen/margin_left_12_dp"
                android:textColor="@color/tv_black_50"
                android:text="这个是测试,测试一下"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>