<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_left_12_dp"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:layout_height="60dp"
            android:id="@+id/et_phNum"/>
        <ImageView
            android:id="@+id/iv_contacts"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_left_12_dp"
            android:src="@drawable/call_head"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_dp"
        android:background="@color/check_bg"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_call"
        android:layout_width="match_parent"
        android:layout_marginTop="18dp"
        android:layout_height="match_parent"/>


</LinearLayout>