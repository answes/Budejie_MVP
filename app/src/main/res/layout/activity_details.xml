<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/win_bg"
    tools:context="com.bigshark.budejie_mvp.pro.shared.view.DetailsActivity">
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/niv_logo"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:text="现价22.00元"
            android:layout_marginLeft="@dimen/margin_left_12_dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原价：30.00"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:id="@+id/bt_buy"
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@color/check_bg"
            android:text="立即购买"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/margin_left_12_dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_left_12_dp"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_left_12_dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_l_8_dp"
                android:text="东莞市沙田车之宝汽车维修店"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tv_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_l_8_dp"
                android:text="东莞市沙田车之宝汽车维修店"
                android:textColor="@android:color/black"
                />
            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_l_8_dp"
                android:text="距离 300km"
                android:textColor="@android:color/black"
                android:paddingBottom="@dimen/margin_left_6_dp"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_caoPhoto"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/photo_icon"/>
        <View
            android:layout_width="@dimen/line_dp"
            android:layout_height="match_parent"
            android:background="@color/check_false_bg"/>
        <ImageView
            android:id="@+id/iv_map"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:src="@drawable/lbs_icon"/>
    </LinearLayout>


</LinearLayout>
