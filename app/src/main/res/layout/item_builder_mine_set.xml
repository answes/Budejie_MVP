<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:background="@android:color/white"
                android:layout_height="50dp">
    <View
        android:id="@+id/v_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_dp"
        android:background="@color/check_false_bg"/>


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_left_icon"
        android:layout_marginLeft="@dimen/margin_left_12_dp"
        android:textSize="@dimen/second_tv_size"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_right_icon"
        android:layout_width="35dp"
        android:src="@drawable/more_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_left_12_dp"
        android:layout_height="35dp" />


    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_left_icon"
        android:layout_marginLeft="@dimen/margin_left_12_dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/v_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_dp"
        android:layout_alignParentBottom="true"
        android:background="@color/check_false_bg"/>

</RelativeLayout>