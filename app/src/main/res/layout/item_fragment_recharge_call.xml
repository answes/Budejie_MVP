<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:gravity="center_vertical"
              android:background="@drawable/essence_recharge_call_grid_bg"
              android:paddingTop="@dimen/margin_left_12_dp"
              android:paddingBottom="@dimen/margin_left_12_dp"
              android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/check_bg"
        android:layout_gravity="center"
        android:textSize="@dimen/second_tv_size"
        android:text="20元"/>
    <TextView
        android:id="@+id/tv_disPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/check_bg"
        android:layout_marginTop="@dimen/margin_left_6_dp"
        android:layout_gravity="center"
        android:text="售价：19.98元"/>

</LinearLayout>